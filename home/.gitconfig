[core]
excludesfile = .gitignore
autocrlf = input

[color]
branch = auto
diff = auto
interactive = auto
status = auto

[alias]
ci = commit
st = status -uall
lg = log --all --graph --pretty=format:'%C(dim yellow)%h%Creset -%C(bold yellow)%d%Creset %s %C(dim green)(%cr) %C(dim yellow)<%an>%Creset'
di = diff --color-words
dic = diff --color-words --cached

# local overrides
[include]
path = ~/.config/git/me
