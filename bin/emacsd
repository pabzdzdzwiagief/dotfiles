#!/usr/bin/env sh

case "$1" in
  start)
    echo "Starting Emacs daemon"
    exec emacs --daemon &>/dev/null
    ;;
  stop)
    echo "Stopping Emacs daemon"
    exec emacsclient -e \(kill-emacs\) &>/dev/null
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"
esac

